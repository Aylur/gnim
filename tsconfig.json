{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2020",
        "lib": ["ESNext"],
        "outDir": "build",
        "removeComments": true,
        "inlineSourceMap": true,
        "strict": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "jsxImportSource": "src/gtk4",
        "verbatimModuleSyntax": true
    },
    "include": ["./src/**/*"]
}
